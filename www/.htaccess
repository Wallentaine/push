<Files .htaccess>
Order Allow,Deny
Deny from all
</Files>

<IfModule php5_module>
php_value session.name MRCRABS
</IfModule>

AddDefaultCharset UTF-8
Options +FollowSymLinks

RewriteEngine On

# Защита от инъекций в запросах
RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
RewriteRule ^(.*)$ index.php [F,L]

Options All -Indexes
ServerSignature Off

RewriteBase /

# Убедитесь, что правила обрабатываются только один раз
RewriteCond %{ENV:REDIRECT_STATUS} !^200$

# Правило для проверки наличия файла или директории
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ $1.php [L]

# Перенаправление www на non-www
RewriteCond %{HTTP_HOST} ^www\.(.+) [NC]
RewriteRule ^(.*)$ http://%1/$1 [L,R=301]

# Другие правила редиректа
RewriteRule ^message_edit\/(.*?)$ message_edit.php?id=$1 [L,QSA]
RewriteRule ^inc\/crabs_push\/(.*?)$ inc\/crabs_push.php?id=$1 [L,QSA]
RewriteRule ^inc\/crabs_push_stat\/(.*?)$ inc\/crabs_push_stat.php?id=$1 [L,QSA]